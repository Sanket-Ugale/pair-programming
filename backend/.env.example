# Environment
DEBUG=true

# Database - Using SQLite by default for easy setup
# For PostgreSQL, uncomment the lines below and set USE_POSTGRES=true
DATABASE_URL=sqlite+aiosqlite:///./pair_programming.db
DATABASE_URL_SYNC=sqlite:///./pair_programming.db
USE_POSTGRES=false

# PostgreSQL Configuration (uncomment to use)
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/pair_programming
# DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/pair_programming
# USE_POSTGRES=true

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# WebSocket
WS_HEARTBEAT_INTERVAL=30
